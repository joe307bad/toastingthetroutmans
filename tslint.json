{
    "extends": [
        "tslint:recommended", 
        "tslint-microsoft-contrib",
        "tslint-react"
    ],
    "rulesDirectory": [
        "node_modules/tslint-microsoft-contrib",
        "./src"
    ],
    "rules": {
        "variable-name": [
            true,
            "allow-pascal-case"
        ],
        "no-implicit-dependencies": [true, "dev"],
        "no-relative-imports": false,
        "linebreak-style": false,
        "no-unsafe-any": false,
        "import-name": false,
        "jsx-no-multiline-js": false,
        "jsx-alignment": false,
        "react-iframe-missing-sandbox": false
    }
}